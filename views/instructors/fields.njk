<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url"
            name="avatarUrl"
            placeholder="http://"
            value="{{instructor.avatarUrl}}">
    </div>
</div>

<div class="item">
    <div>Instrutor</div>
    <div>
        <input 
            type="text"
            name="name"
            placeholder="Nome do instutor"
            value="{{instructor.name}}">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
        type="date"
        name="birth"
        value="{{instructor.birth}}">
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input 
                type="radio"
                name="gender"
                value="M"
                {% if instructor.gender == 'M' %} checked {% endif %}>
            Masculino        
        </span>
        <span>
            <input 
                type="radio"
                name="gender"
                value="F"
                {% if instructor.gender == 'F' %} checked {% endif %}>
            Feminino        
        </span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
    <input 
        type="text"
        name="services"
        placeholder="Separe as áreas de atuação por vírgula"
        value="{{instructor.services}}">
    </div>
</div>

<button type="submit">Salvar</button>
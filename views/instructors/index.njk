{% extends "layout.njk" %}

{% block content %}
   <div class="card table__container">
         <table>
            <thead>
                  <tr>
                     <th>Instrutor</th>
                     <th>Especialidades</th>
                     <th>Ação</th>
                  </tr>
            </thead>
            <tbody>
               {% for instructor in instructors %}
               <tr>
                  <td>
                     <span style="background-image: url({{instructor.avatarUrl}})"></span>{{instructor.name}}</td>
                  <td>
                     {% for service in instructor.services %}
                        <span>{{service}}</span>
                     {% endfor %}
                  </td>
                  <td><a href="/instructors/{{instructor.id}}">Ver</a></td>
               </tr>
               {% endfor %}
            </tbody>
         </table>
   </div>

{% endblock %}
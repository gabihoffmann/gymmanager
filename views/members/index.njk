{% extends "layout.njk" %}

{% block content %}
   <div class="card table__container">
      <a href="/members/create">Novo</a>
         <table>
            <thead>
                  <tr>
                     <th>Membro</th>
                     <th>Email</th>
                     <th>Altura</th>
                     <th>Peso</th>
                     <th>Ação</th>
                  </tr>
            </thead>
            <tbody>
               {% for member in members %}
               <tr>
                  <td>
                     <span style="background-image: url({{member.avatarUrl}})"></span>
                     {{member.name}}
                  </td>
                  <td>{{member.email}}</td>
                  <td>{{member.height}}m</td>
                  <td>{{member.weight}}kg</td>

                  <td><a href="/members/{{member.id}}">Ver</a></td>
               </tr>
               {% endfor %}
            </tbody>
         </table>
   </div>

{% endblock %}
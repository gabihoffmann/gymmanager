{% extends "layout.njk" %}

{% block content %}
   <div class="card">
   <section class="avatar" 
      style="background: url('{{member.avatarUrl}}')
      no-repeat center center / cover"></section>

   <section class="details">
      <h3>Detalhes</h3>
      <div class="item">
         <div>Membro</div>
         <div>{{member.name}}</div>
      </div>

      <div class="item">
         <div>Email</div>
         <div>{{member.email}}</div>
      </div>

      <div class="item">
         <div>Anivers√°rio</div>
         <div>{{member.birth}}</div>
      </div>

      <div class="item">
         <div>Sexo</div>
         <div>{{"Feminino" if member.gender == 'F' else "Masculino"}}</div>
      </div>

      <div class="item">
         <div>Tipo sanguineo</div>
         <div>{{member.blood}}</div>
      </div>

      <div class="item">
         <div>Altura (m)</div>
         <div>{{member.height}}</div>
      </div>

      <div class="item">
         <div>Peso (Kg)</div>
         <div>{{member.weight}}</div>
      </div>


    
      <a href="/members/{{member.id}}/edit" class="button">Editar</a>

   </section>
   </div>

{% endblock %}